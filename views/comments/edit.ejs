<%- include("../partials/head") %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-11 col-sm-11 col-md-8 col-lg-6 col-xl-5">
      <h1 class="text-center mb-4">Edit Comment</h1>

      <form action="/campgrounds/<%= camp_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
        <div class="form-group">
          <label for="commentTextInput" class="d-none">Comment</label>
          <textarea name="comment[text]" id="commentTextInput" class="form-control" rows="5" placeholder="Comment"><%= comment.text %></textarea>
        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-success btn-block">Submit</button>
        </div>

        <a href="/campgrounds/<%= camp_id %>">Go Back</a>
      </form>

    </div>
  </div>
</div>

<%- include("../partials/footer") %>
