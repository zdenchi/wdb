<%- include("../partials/head") %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-11 col-sm-11 col-md-8 col-lg-6 col-xl-5">
      <h1 class="text-center mb-4">Edit <%= camp.name %></h1>
      <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="campName" class="d-none">Camp Name</label>
          <input type="text" class="form-control" id="campName" name="campground[name]" value="<%= camp.name %>" required>
        </div>
        <div class="form-group">
          <label for="imageURL" class="d-none">Image URL</label>
          <input type="text" class="form-control" id="imageURL" name="campground[image]" value="<%= camp.image %>" required>
        </div>
        <div class="form-group">
          <label for="descriptionInput" class="d-none">Description</label>
          <textarea name="campground[description]" id="descriptionInput" class="form-control" rows="5"><%= camp.description %></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-success btn-block">Submit</button>
        </div>
        <a href="/campgrounds">Go Back</a>
      </form>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
