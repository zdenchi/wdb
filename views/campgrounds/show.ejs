<%- include("../partials/head") %>

<div class="container">
  <div class="row">

    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>

    <div class="col-md-9">
      <div class="card mb-3">
        <img src="<%= camp.image %>" class="card-img-top img-thumbnail border-0" alt="<%= camp.name %>">
        <div class="card-body">
          <div class="float-none">
            <h5 class="card-title float-right">$9.00/night</h5>
            <h5 class="card-title"><a href="#"><%= camp.name %></a></h5>
          </div>
          <p class="card-text"><%= camp.description %></p>
        </div>
      </div>

      <div class="card border-dark mb-3">
        <div class="card-body">
          <div class="row">
            <% camp.comments.forEach(item => { %>
              <div class="col-md-9">
                <h5 class="title"><%= item.author %>:</h5>
                <p class="text"><%= item.text %></p>
              </div>
            <%  }); %>
          </div>

            <div class="text-right">
              <a class="btn btn-warning" href="/campgrounds/<%= camp.id  %>/comments/new">Add Comment</a>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
